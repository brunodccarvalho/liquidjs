#playground
  background: var(--color-content-bg)
  overflow: hidden
  .wrapper
    margin-bottom: 40px
  h1
    font-size: 36px
    font-weight: 300
    margin: 40px 0 24px

  #editors
    display: grid
    overflow: hidden
    margin-bottom: 16px
    height: 75vh
    grid-template-columns: auto auto
    grid-template-rows: 60% 40%
    grid-gap: 16px
  .area-tpl
    grid-row: 1
    grid-column: 1
  .area-data
    grid-row: 2
    grid-column: 1
  .area-output
    grid-column: 2
    grid-row: 1 / -1
  .editor-wrapper
    display: flex
    gap: 8px
    flex-direction: column
    .editor
      flex-grow: 1
  .hide
    display: none
  .loader
    width: 75px
    height: 75px
    margin: 150px auto 200px
    border-top: 5px solid #292929
    border-right: 5px solid #efefef
    border-bottom: 5px solid #efefef
    border-left: 5px solid #efefef
    border-radius: 100px
    animation: spin 1s infinite linear
  @keyframes spin
    100%
      transform: rotate(360deg)
